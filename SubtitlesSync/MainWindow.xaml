<Window x:Class="SubtitlesSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubtitlesSync"
        xmlns:userControls="clr-namespace:SubtitlesSync.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding WindowHeight, Mode=TwoWay}" Width="{Binding WindowWidth, Mode=TwoWay}" MinHeight="200" MinWidth="450" d:Width="350" d:MinWidth="350">
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding EscKeyCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <userControls:MenuBar/>

        <Grid Margin="10,0,10,10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="22"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="86"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="33"/>
                    <ColumnDefinition Width="86"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Browse..." x:Name="btnBrowse"
                Command="{Binding BrowseCommand}"/>
                <TextBox Grid.Column="1" x:Name="tbAddress" Text="{Binding FolderPath}" Margin="10,0" VerticalContentAlignment="Center" IsEnabled="False" />
                <!--https://stackoverflow.com/questions/6771769/refresh-icon-for-button-->
                <!--https://stackoverflow.com/questions/253431/is-it-appropriate-to-use-wingdings-fonts-in-a-windows-forms-or-wpf-app-->
                <!--https://web.archive.org/web/20070721020023/http://www1.tip.nl/%7Et876506/UnicodeDisplay.html-->
                <Button Grid.Column="2" Content="Q" Name="btnReloadFolder" FontFamily="Wingdings 3" Margin="0,0,10,0"
                Command="{Binding ReloadFolder}"/>
                <Button Grid.Column="3" Content="Rename!" Name="btnRename"
                Command="{Binding RenameCommand}"/>
            </Grid>

            <DataGrid Grid.Row="1" Margin="0,10,0,0"
                      ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem}"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      IsReadOnly="True"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Video FileName" Binding="{Binding VideoDisplayName}" Width="45*"/>
                    <DataGridTextColumn Header="Subtitles FileName" Binding="{Binding SubtitlesDisplayName}" Width="44*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="11*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
