                <ListBox Margin="0,10,0,0"
                         ItemsSource="{Binding Items}" d:ItemsSource="{d:SampleData}"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <HierarchicalDataTemplate>
                            <CheckBox Content="{Binding VideoDisplayName}"/>
                        </HierarchicalDataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>-->
            <!--#endregion-->
           

            

            <!--#region ItemsControl without ItemTemplate linking -->
            <!--<StackPanel Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Items}" d:ItemsSource="{d:SampleData}" >

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Padding="0,2" VerticalContentAlignment="Center">
                                <TextBlock Text="{Binding Path=VideoDisplayName}" Margin="5,0,0,0"/>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </StackPanel>-->
            <!--#endregion-->

            <!--<StackPanel Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Items}" d:ItemsSource="{d:SampleData}" ItemTemplate="{Binding Source={StaticResource MainItemList}}"/>
            </StackPanel>-->
