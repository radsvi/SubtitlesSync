            <DataGridTextColumn Header="Subtitles FileName" Binding="{Binding SubtitlesDisplayName}" Width="44*" IsReadOnly="True"/>
            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="11*" IsReadOnly="True"/>
