    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/OptionsWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ListBox Margin="0,10,0,0" HorizontalContentAlignment="Stretch"
    ItemsSource="{Binding Items}" d:ItemsSource="{d:SampleData ItemCount=2}"
    SelectedItem="{Binding SelectedItem}">
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            </Style>
        </ListBox.ItemContainerStyle>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid HorizontalAlignment="Stretch" Height="24">
                    
                        <CheckBox HorizontalContentAlignment="Stretch"
                                Style="{StaticResource DownloadListCheckbox}"
                                IsChecked="{Binding Path=Checked}" Content="{Binding VideoDisplayName}"/>
                    
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>


